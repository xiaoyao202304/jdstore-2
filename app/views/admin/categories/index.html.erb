<div class="pull-right">
  <%= link_to '新建类别', new_admin_category_path, class: "btn btn-primary"%>
</div>
<h1>所有分类</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>类别名</th>
      <th colspan="2">设置</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
