<%= render :partial => "products/menu" %>

<div class="productbg">
  <div class="nocontent">
  </div>
  <div class="row container">
    <% if @query_string.blank? %>
    <div class="welcome-content-title">
      抱歉，没找到您要的商品。
    </div>
    <% elsif @products.blank? %>
      <div class="welcome-content-title">
        抱歉，没找到您要的商品。
      </div>
    <% else %>
      <div class="welcome-content-title">
        为您找到的商品 "<%= @query_string %>"
      </div>
      <% @products.each do |product| %>
      <div class="col-xs-6 col-md-4">
        <%= link_to product_path(product) do %>

          <div class="product-item">
            <div class="pi-img-wrapper">
              <!-- <img src="/images/iwatch2-02.png" class="img-responsive" alt="Berry Lace Dress"> -->
              <% if product.image.present? %>
                <%= image_tag(product.image.medium.url, class: "img-responsive") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "img-responsive") %>
              <% end %>
              <div>
                  <%#= link_to("VIEW", product_path(product), class: "btn")%>
              </div>
            </div>
            <hr>
          </div>
        <% end %>
      </div>
      <% end %>
     <% end %>

  </div>
  <% if @products.present? %>
  <div class="text-center">
    <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
  </div>
  <% end %>
  <br>
  <br>
</div>
<br>
